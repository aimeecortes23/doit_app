<h1><%= @task.title %></h1>

<p>
<%= form_for ([@task, @task.subtasks.build]) do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :priority %>
  <%= f.submit %>
<% end %>
</p>


<table>
<% @task.subtasks.each do |subtask| %>
<tr>
  <td><%= subtask.title %></td>
  <td><%= subtask.priority %></td>
</tr>


<% end %>
</table>
